FROM node:20-alpine

# Installiere alle Abh채ngigkeiten im Container
WORKDIR /workspace
COPY package*.json ./
RUN npm install
RUN apk add --no-cache git curl zsh \
    && sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
# Kopiere den Rest des Codes (wird beim Start des Containers durch Bind-Mount 체berschrieben)
COPY . .

# Optional: Standard-Command (kann in devcontainer.json 체ber postCreateCommand 체berschrieben werden)
CMD ["zsh"]